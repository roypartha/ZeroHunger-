@model ZeroHunger.EF.Models.FoodItem

@{
    ViewBag.Title = "Add Food Item";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>Add Food Item for Collect Request: @Model.CollectRequestId</h2>

@using (Html.BeginForm("AddFood", "Employee", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>

    @Html.HiddenFor(model => model.CollectRequestId)

    <input type="submit" value="Collect" class="btn btn-primary" />
}
