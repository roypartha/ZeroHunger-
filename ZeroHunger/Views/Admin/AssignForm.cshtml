@model ZeroHunger.Models.AssignFoodViewModel

@{
    ViewBag.Title = "Assign Food Item";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>Assign Food Item</h2>

@using (Html.BeginForm("AssignForm", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.AssignRequest.Name)
        @Html.TextBoxFor(model => model.AssignRequest.Name, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.AssignRequest.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AssignRequest.Quantity)
        @Html.TextBoxFor(model => model.AssignRequest.Quantity, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.AssignRequest.Quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AssignRequest.Address)
        @Html.TextBoxFor(model => model.AssignRequest.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AssignRequest.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AssignRequest.EmployeeId)
        @Html.DropDownListFor(model => model.AssignRequest.EmployeeId, Model.Employees, "Select an Employee", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AssignRequest.EmployeeId)
    </div>

    <input type="hidden" name="FoodItemId" value="@Model.AssignRequest.Id" />

    <input type="submit" value="Assign" class="btn btn-primary" />
}
